{
  "name": "webext-dynamic-content-scripts",
  "version": "1.2.1",
  "description": "Automatically inject your `content_scripts` on custom domains.",
  "license": "MIT",
  "repository": "bfred-it/webext-dynamic-content-scripts",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "browser",
    "webext",
    "chrome",
    "extension",
    "content script",
    "ping",
    "test",
    "detect",
    "detection",
    "firefox"
  ],
  "module": "src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "watch:xo": "onchange 'src/*.js' --initial -- xo --fix",
    "watch:rollup": "npm run build -- --watch",
    "watch": "npm run watch:rollup | npm run watch:xo",
    "build": "rollup -c node:webext --name injectContentScripts --banner //\\ https://github.com/bfred-it/webext-dynamic-content-scripts --input src/index.js --output dist/webext-dynamic-content-scripts.js",
    "test": "xo"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ]
  },
  "devDependencies": {
    "onchange": "^3.2.0",
    "rollup": "^0.41.6",
    "rollup-config-webext": "^1.1.0",
    "rollup-watch": "^3.2.2",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "webext-content-script-ping": "^1.0.1"
  }
}
